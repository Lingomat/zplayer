{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [
      "./src/@types/"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "www",
    "plugins"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}

